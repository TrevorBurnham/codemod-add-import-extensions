{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "ES2015",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022"],
    "jsx": "react",
    "reactNamespace": "JSX",
    "emitDeclarationOnly": true
  }
}
